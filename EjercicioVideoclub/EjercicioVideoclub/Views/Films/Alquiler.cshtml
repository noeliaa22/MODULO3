@model EjercicioVideoclub.Models.Film

@{
    ViewData["Title"] = "Details";
}

<h1>Película seleccionada</h1>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" class="portadasDetalle" />
        </dd>
        <dt class="col-sm-2">
            Sinopsis
        </dt>
        <dd class="col-sm-10">
            @Model.Synopsis
        </dd>
        <dt class="col-sm-2">
            Género
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>

        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Model.Rented
        </dd>
    </dl>
</div>
<div>
    <button>
        @*<a asp-controller="Users" asp-action="Index">Confirmar alquiler</a>*@
        <a asp-controller="UserFilms" asp-action="ConfirmarAlquiler" asp-route-id="@Model.Id">Confirmar Alquiler</a>
    </button>
    <a asp-action="Index">Back to List</a>
</div>

