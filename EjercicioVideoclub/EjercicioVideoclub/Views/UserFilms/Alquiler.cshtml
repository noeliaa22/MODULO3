@model EjercicioVideoclub.Models.UserFilm

@{
    ViewData["Title"] = "Alquiler";
}

<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Film.Title
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Film.Image" class="portadasDetalle" />
        </dd>
        <dt class="col-sm-2">
            Sinopsis
        </dt>
        <dd class="col-sm-10">
            @Model.Film.Synopsis
        </dd>
        <dt class="col-sm-2">
            Género
        </dt>
        <dd class="col-sm-10">
            @Model.Film.Genre
        </dd>

        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Model.Film.Rented
        </dd>
    </dl>
</div>
<div>
    <button>
        <a asp-controller="Users" asp-action="Index" asp-route-Id="1">Confirmar alquiler</a>
        @*<a asp-action="ConfirmarAlquiler">Confirmar alquiler</a>*@
    </button>
    <a asp-action="Index">Back to List</a>
</div>

